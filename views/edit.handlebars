<h1 class="mb-1 restaurant-show-title">編輯 -{{restaurant.name}}</h1>
<div class="container">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">中文店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name" placeholder="麥當勞" name="name" value ="{{restaurant.name}}" required />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name_en" placeholder="Mac Donald" name="name_en" value ="{{ restaurant.name_en }}" required />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="category" placeholder="速食" list="categoryOptions" name="category" value ="{{restaurant.category}}" required />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="image" name="image" value ="{{restaurant.image}}" required />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="location" placeholder="新北市大區小路1段5號" name="location" value ="{{restaurant.location}}" required />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
      <input type="tel" class="form-control" id="phone" placeholder="02-12356789" name="phone" value ="{{restaurant.phone}}" required />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google地圖連結<span class="text-danger">*</span></label>
      <input type="url" class="form-control" id="google_map" name="google_map" value ="{{restaurant.google_map}}" required />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating" value ="{{restaurant.rating}}" required />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述<span class="text-danger">*</span></label>
      <textarea class="form-control" id="description" rows="3" name="description" 
      required>{{restaurant.description}}</textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">更新餐廳</button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
      <button type="reset" class="btn btn-outline-danger">還原預設</button>
    </div>
  </form>
</div>